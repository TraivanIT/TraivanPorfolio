<%= form_for(@portfolio_item) do |f|%>
  <div class="row">
    <div class="col-md-8">
      <div>
        <%= f.label :title%><br>
        <%= f.text_field :title , class: "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :subtitle%><br>
        <%= f.text_field :subtitle , class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :body%><br>
        <%= f.text_area :body , class: "form-control" , rows: 12%>
      </div>
    </div>
    <div class="col-md-4 form-padding-top">
      <div class="form-group">
        <label class="btn btn-secondary">
          Upload a thumb image file <%= f.file_field :thumb_image, style: 'display:none'%>
        </label>
      </div>

      <div class="form-group">
         <label class="btn btn-secondary">
          Upload a main image file <%= f.file_field :main_image, style: 'display:none'%>
        </label>
      </div>
      <hr>
      
      <h2>Technology Used:</h2>
      <div>
        <%= f.fields_for :technologies do |technology_form|%>
          <%= render 'technology_fields', f: technology_form %>
        <% end %>

        <div>
          <%= link_to_add_association 'add Technology', f, :technologies %>
        </div>
      </div>
      

    <div class="form-group">
      <%= f.submit  'Save Portfolio_item' , class: "btn btn-primary btn-block"%>
    </div>
      
    </div>
  </div>
<% end %>