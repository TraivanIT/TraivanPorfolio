<%= form_for(@portfolio_item) do |f|%>
  <p>
    <%= f.label :title%><br>
    <%= f.text_field :title%>
  </p>
  <p>
    <%= f.label :subtitle%><br>
    <%= f.text_field :subtitle%>
  </p>

  <p>
    <%= f.label :body%><br>
    <%= f.text_area :body%>
  </p>
  <ul>
    <%= f.fields_for :technologies do |technology_form|%>
    <li>
      <%= technology_form.label :name%>
      <%= technology_form.text_field :name%>
    </li>
    <% end %>
  </ul>
  <p>
    <%= f.submit  'Create portfolio_item' , class: "btn btn-primary"%>
  </p>
<% end %>