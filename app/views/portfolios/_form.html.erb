<%= form_for(@portfolio_item) do |f|%>
  <div>
    <%= f.label :title%><br>
    <%= f.text_field :title , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :subtitle%><br>
    <%= f.text_field :subtitle , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :body%><br>
    <%= f.text_area :body , class: "form-control" , rows: 12%>
  </div>
  <ul>
    <%= f.fields_for :technologies do |technology_form|%>
    <li>
      <%= technology_form.label :name%>
      <%= technology_form.text_field :name%>
    </li>
    <% end %>
  </ul>
  <div class="form-group">
    <%= f.submit  'Save Portfolio_item' , class: "btn btn-primary btn-block"%>
  </div>
<% end %>