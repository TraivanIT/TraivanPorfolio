<div class="col-lg-4 col-ml-6 col-sm-6 col-xs-12">
  <div class="card">
    <%= image_tag portfolio_item.thumb_image.url, class: 'img' unless portfolio_item.thumb_image.nil?%>
    <p class="card-text">
      <span>
        <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item)%>
      </span>
        <%= portfolio_item.subtitle%>
    </p>
  </div>
</div>