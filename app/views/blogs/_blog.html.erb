<%= link_to blog_path(blog)do %>
<div class="card post-wrapper">
  <div class="card-body">
    <h4><%=blog.title%></h4>
    <small><em><%= blog.created_at.strftime("%d %b %Y")%> by: <%= User.first.name%></em></small> 
  <p ><%= truncate(blog.body, length: 70, separator: '')%></p>
  
  </div>
</div>
<div class="spacer"> </div>  
<% end %>

 
  