<div class="comment-card">
  <div class="card">
    <div class="card-block"> 
      <div class="row">

        <div class="col-md-2">
          <%= gravatar comment.user%>
        </div>

        <div class="col-md-10">
          <div>
            <%= comment.content%>
          </div>
          <div>
            <small><em>Comment posted by <%= comment.user.first_name%> <%= distance_of_time_in_words(comment.created_at, Time.now)%> ago </em></small>
          </div>
          
        </div>

      </div>
    </div>
  </div>
</div><!--end of comment card-->